page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .ment_item {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .avtive {
  color: var(--themeColor);
  border-left: 5rpx solid #000;
}
.cates .cates_container .right_cntent {
  flex: 5;
}
.cates .cates_container .right_cntent .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates .cates_container .right_cntent .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_cntent .goods_group .goods_title .title {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  line-height: 10rpx;
}
.cates .cates_container .right_cntent .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_cntent .goods_group .goods_list navigator {
  text-align: center;
  width: 33.33%;
}
.cates .cates_container .right_cntent .goods_group .goods_list navigator image {
  width: 50% ;
}
.cates .cates_container .right_cntent .goods_group .goods_list navigator .goods_name {
  font-size: 25rpx;
}
